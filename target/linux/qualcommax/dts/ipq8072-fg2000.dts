// CPU3温度传感器及散热策略
&cpu3_thermal {
    trips {
        cpu3_trip_active: cpu-active {
            temperature = <60000>;  // 触发温度：60°C
            hysteresis = <2000>;    // 回差温度：2°C
            type = "active";
