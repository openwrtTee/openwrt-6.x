// CPU集群温度传感器及散热策略
&cluster_thermal {
    trips {
        cluster_active: cluster-active {
            temperature = <60000>;  // 触发温度：60°C
            hysteresis = <2000>;    // 回差温度：2°C
            type = "active";
        };
    };

    cooling-maps {
        cluster-active {
            cooling-device = <&fan THERMAL_NO_LIMIT THERMAL_NO_LIMIT>;
            trip = <&cluster_active>;
        };
    };
};

&tlmm {
	// 修改标签名称，避免与包含文件中的定义冲突
	fg2000_mdio_pins: mdio-state {
		mdc-pins {
			pins = "gpio68";
			function = "mdc";
			drive-strength = <8>;
			bias-disable;
		};
		
		mdio-pins {
			pins = "gpio69";
			function = "mdio";
			drive-strength = <8>;
			bias-pull-up;
		};
	};
};

&edma {
	status = "okay";
};

&blsp1_uart5 {
	status = "okay";
};

&prng {
	status = "okay";
};

&ssphy_0 {
	status = "okay";
};

&qusb_phy_0 {
	status = "okay";
};

&ssphy_1 {
	status = "okay";
};

&qusb_phy_1 {
	status = "okay";
};

&usb_0 {
	status = "okay";
};

&usb_1 {
	status = "okay";
};

&cryptobam {
	status = "okay";
};

&crypto {
	status = "okay";
};

&qpic_bam {
	status = "okay";
};


&blsp1_spi1 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		spi-max-frequency = <50000000>;
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0>;

		partitions {
			compatible = "qcom,smem-part";
		};
	};
};

&sdhc_1 {
	status = "okay";

	/delete-property/ mmc-hs400-1_8v;
	mmc-hs200-1_8v;
	mmc-ddr-1_8v;
	vqmmc-supply = <&l11>;
};

&mdio {
	status = "okay";
	// 使用修改后的标签
	pinctrl-0 = <&fg2000_mdio_pins>;
	pinctrl-names = "default";
	reset-gpios = <&tlmm 37 GPIO_ACTIVE_LOW>;
	
	ethernet-phy-package@0 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "qcom,qca8075-package";
		reg = <0>;
		qcom,package-mode = "psgmii";
		
		qca8075_0: ethernet-phy@0 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <0>;
		};
		
		qca8075_1: ethernet-phy@1 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <1>;
		};
		
		qca8075_2: ethernet-phy@2 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <2>;
		};
		
		qca8075_3: ethernet-phy@3 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <3>;
		};
		
		qca8075_4: ethernet-phy@4 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <4>;
		};
	};
	
	aqr108: ethernet-phy@7 {
		compatible = "ethernet-phy-ieee802.3-c45";
		reg = <7>;
		reset-gpios = <&tlmm 50 GPIO_ACTIVE_LOW>;
	};
};

&dp1 {
	status = "disabled";
	phy-handle = <&qca8075_0>;
};

&dp2 {
	status = "disabled";
	phy-handle = <&qca8075_1>;
};

&dp3 {
	status = "okay";
	phy-handle = <&qca8075_2>;
	label = "wan";
};

&dp4 {
	status = "okay";
	phy-handle = <&qca8075_3>;
	label = "lan1";
};

&dp5 {
	status = "okay";
	phy-handle = <&qca8075_4>;
	label = "lan2";
};

&dp6 {
	status = "okay";
	phy-mode = "usxgmii";
	phy-handle = <&aqr108>;
	label = "lan3";
};

&switch {
	status = "okay";
	switch_lan_bmp = <(ESS_PORT4 | ESS_PORT5 | ESS_PORT6)>;
	switch_wan_bmp = <ESS_PORT3>;
	switch_mac_mode = <0>;
	switch_mac_mode1 = <255>;
	switch_mac_mode2 = <13>;
	
	qcom,port_phyinfo {
		port@3 {
			port_id = <3>;
			phy_address = <2>;
		};
		
		port@4 {
			port_id = <4>;
			phy_address = <3>;
		};
		
		port@5 {
			port_id = <5>;
			phy_address = <4>;
		};
		
		port@6 {
			port_id = <6>;
			phy_address = <7>;
			compatible = "ethernet-phy-ieee802.3-c45";
			ethernet-phy-ieee802.3-c45;
		};
	};
};

&wifi {
	status = "disabled";
	compatible = "qcom,ipq8074-wifi";
	qcom,ath11k-fw-memory-mode = <1>;
	qcom,ath11k-calibration-variant = "Inseego-FG2000";
};
